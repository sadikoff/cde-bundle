<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="koff_cde.transliterator" class="Artemiso\DoctrineExtraBundle\Utils\Transliterator" />

        <service id="koff_cde.extension_translatable_listener" class="Artemiso\DoctrineExtraBundle\Listener\DoctrineExtensionTranslatableListener">
            <argument type="service" id="koff.cde.listener.translatable"/>
            <tag name="kernel.event_listener" event="kernel.request" method="onLateKernelRequest" priority="-10"/>
        </service>

        <service id="koff_cde.extension_loggable_listener" class="Artemiso\DoctrineExtraBundle\Listener\DoctrineExtensionLoggableListener">
            <argument type="service" id="security.token_storage" on-invalid="null"/>
            <argument type="service" id="security.authorization_checker" on-invalid="null"/>
            <argument type="service" id="koff_cde.listener.loggable"/>
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest"/>
        </service>

        <service id="koff_cde.listener.tree" class="Gedmo\Tree\TreeListener" public="false">
            <tag name="doctrine.event_subscriber"/>
        </service>
        <service id="koff_cde.listener.translatable" class="Gedmo\Translatable\TranslatableListener" public="false">
            <call method="setDefaultLocale">
                <argument>%locale%</argument>
            </call>
            <call method="setTranslationFallback">
                <argument>false</argument>
            </call>
            <tag name="doctrine.event_subscriber"/>
        </service>
        <service id="koff_cde.listener.timestampable" class="Gedmo\Timestampable\TimestampableListener" public="false">
            <tag name="doctrine.event_subscriber"/>
        </service>
        <service id="koff_cde.listener.sluggable" class="Gedmo\Sluggable\SluggableListener" public="false">
            <tag name="doctrine.event_subscriber"/>
            <call method="setTransliterator">
                <argument type="collection">
                    <argument type="service" id="koff_cde.transliterator" />
                    <argument>transliterate</argument>
                </argument>
            </call>
        </service>
        <service id="koff_cde.listener.sortable" class="Gedmo\Sortable\SortableListener" public="false">
            <tag name="doctrine.event_subscriber"/>
        </service>
        <service id="koff_cde.listener.loggable" class="Gedmo\Loggable\LoggableListener" public="false">
            <tag name="doctrine.event_subscriber"/>
        </service>
    </services>

</container>
