{
    "name": "koff/cde-bundle",
    "type": "symfony-bundle",
    "description": "Work with gedmo/doctrine-extensions is simple!",
    "keywords": [
        "symfony2",
        "doctrine2",
        "i18n",
        "internationalization",
        "translation",
        "translatable",
        "form",
        "gedmo"
    ],
    "homepage": "https://koff.pro",
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir Sadicov",
            "email": "sadikoff@gmail.com"
        }
    ],
    "support": {
        "email": "sadikoff@gmail.com"
    },
    "require": {
        "php": "^8.0",
        "gedmo/doctrine-extensions": "^3.0.2",
        "symfony/config": "^5.4 || ^6.0",
        "symfony/dependency-injection": "^5.4 || ^6.0",
        "symfony/http-kernel": "^5.4 || ^6.0"

    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^2.3",
        "doctrine/orm": "^2.6.3",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "to use the ORM extensions",
        "doctrine/mongodb-odm-bundle": "to use the MongoDB ODM extensions"
    },
    "autoload": {
        "psr-4": {
            "Koff\\CdeBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Koff\\CdeBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install":"dist",
        "sort-packages": true
    },
    "minimum-stability": "beta"
}
